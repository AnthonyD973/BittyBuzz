/**
 * @file config.h
 * @brief CMake main configuration file.
 */

#ifndef CONFIG_H
#define CONFIG_H

/**
 * @brief Total size of heap in bytes.
 */
#define BBZHEAP_SIZE @HEAP_SIZE@

/**
 * @brief Elements per table segment.
 */
#define BBZHEAP_ELEMS_PER_TSEG @HEAP_ELEMS_PER_TSEG@

/**
 * @brief Size of the stack in bytes.
 */
#define BBZSTACK_SIZE @STACK_SIZE@

/**
 * @brief Name of the robot, in case we are crosscompiling.
 */
#cmakedefine BBZ_ROBOT

/**
 * @brief Index of end of the heap's space reserved for lambdas'
 * activation record.
 * @note The maximum value is 0xFE (254)
 */
#define RESERVED_ACTREC_MAX (uint16_t)@MAX_ACTREC_COUNT@

/**
 * @brief Debug flag.
 */
#cmakedefine DEBUG

#endif // !CONFIG_H
